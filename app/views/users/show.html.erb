<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= @user.name %></h1>
      </div>
      <div class="panel-body">
        <p>
          <b>Email:</b>
          <%= @user.email %>
        </p>
        <p>
          <b>Listing user's planners:</b>
        </p>
        <div class="list-group">
          <%= render @planners %>
        </div>
        <% if @user.organiser %>
        <p>
          <b>Listing user's competitions:</b>
        <p>
        <div class="list-group">
          <%= render @competitions %>
        </div>
        <% end %>
      </div>
    </div>
    <% if current_user == @user %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <b>Add new planner..</b>
        </div>
        <div class="panel-body">
          <% if @new_planner.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@new_planner.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
              <% @new_planner.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <%= bootstrap_form_for(@new_planner) do |f| %>
              <%= f.hidden_field :user_id %>
              <%= f.text_field :name %>
              <%= f.file_field :tarball %>
              <%= f.submit 'Add' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

