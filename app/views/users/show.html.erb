<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= @user.name %></h1>
      </div>
      <div class="panel-body">
        <p>
          <b>Email:</b>
          <%= @user.email %>
        </p>
        <p>
          <b>Listing user's planners:</b>
        </p>
        <div class="list-group">
          <%= render @planners %>
        </div>
        <% if @user.organiser or @user.admin %>
        <p>
          <b>Listing user's competitions:</b>
        <p>
        <div class="list-group">
          <%= render @competitions %>
        </div>
        <% end %>
        <% if allow? 'users', 'edit', @user %>
          <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default' %>
        <% end %>
        <% if allow? 'users', 'destroy' %>
          <%= link_to 'Delete User', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
      <% if allow? "users", "edit", @user %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <b>Add new planner..</b>
        </div>
        <div class="panel-body">
          <%= link_to 'Add Planner', new_planner_path, class: 'btn btn-default' %>
        </div>
      </div>
      <% end %>
  </div>
</div>

