<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= @user.name %></h1>
      </div>
      <div class="panel-body">
        <p>
          <b>Email:</b>
          <%= @user.email %>
        </p>
        <p>
          <b>Listing user's planners:</b>
        </p>
        <div class="list-group">
          <%= render @planners %>
        </div>
      </div>
    </div>
    <% if current_user == @user %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <b>Add new planner..</b>
        </div>
        <div class="panel-body">
          <%= bootstrap_form_for(@new_planner) do |f| %>
              <%= f.hidden_field :user_id %>
              <%= f.text_field :name %>
              <%= f.text_field :location %>
              <%= f.submit 'Add' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

