<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Planners</h1>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <%= render @planners %>
        </div>

        <% if allow? "planners", "new" %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <b>Add new planner..</b>
            </div>
            <div class="panel-body">
              <%= link_to 'Add Planner', new_planner_path, class: 'btn btn-default' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
